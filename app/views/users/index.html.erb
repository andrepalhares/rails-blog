<h1>All Blog Users</h1>
<hr />

<%= will_paginate %>

<center><table>
  <tr>
    <th>Image</th>
    <th>Username</th>
    <th>Articles Written</th>
  </tr>

<% @users.each do |user| %>
<tr>
  <td><%= link_to gravatar_for(user), user_path(user) %></td>
  <td><%= link_to user.username, user_path(user) %></td>
  <td><small><%= pluralize(user.articles.count, "article") if user.articles %></small></td>
  <% if logged_in && current_user.admin? %>
    <td><%= link_to "Delete", user_path(user), method: :delete, data: {confirm: "Are you sure you want to delete this user?"}  %></td>
  <% end %>
</tr>
<% end %>
</table></center>

<%= will_paginate %>
