<% if @user.errors.any? %>
<p style="color: red;">The following errors ocurred:</p>
  <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li>
        <%= msg %>
      </li>
    <% end %>
  </ul>
<% end %>

